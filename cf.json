{
  "Resources": {
    "awsS3Ec2Profile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "InstanceProfileName": "s3-full-access-instance-profile",
        "Roles": ["s3Ec2Role"]
      }
    },
    "awsS3Ec2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "IamInstanceProfile": "s3-full-access-instance-profile",
        "ImageId": "ami-0ff8a91507f77f867",
        "InstanceType": "t2.micro",
        "Monitoring": true,
        "KeyName": "aws-s3-ec2-kp",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "yum -y update\n",
                "yum -y install git\n",
                "yum -y install python\n",
                "pip install flask\n",
                "pip install boto3\n",
                "git clone https://github.com/rrruko/aws-s3-ec2.git\n",
                "cd aws-s3-ec2\n",
                "python -m flask run --host=0.0.0.0\n"
              ]
            ]
          }
        }
      }
    },
    "s3Ec2Policy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "ManagedPolicyName": "s3-ec2-policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "S3EC2Policy",
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": "*"
            }
          ]
        }
      }
    },
    "s3Ec2Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          { "Ref": "s3Ec2Policy"
          }
        ],
        "RoleName": "s3Ec2Role"
      }
    }
  }
}
